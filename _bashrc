#!/usr/bin/env bash

# load aliases
if [ -f ~/.aliases ]; then
  source ~/.aliases
fi

# load functions
if [ -f ~/.functions ]; then
  source ~/.functions
fi

# load local (private) settings
if [ -f ~/.localrc ]; then
  source ~/.localrc
fi

# load lita settings
if [ -f ~/.litarc ]; then
  source ~/.litarc
fi

# symlink ~/code to db, if it doesn't exist
if [ ! -e ~/Code ]; then
  ln -s ~/Dropbox/Code ~/Code
fi

# local vars for prompt colors
e=`printf "\033"`
end="$e[0m"
red="$e[1;31m"
green="$e[1;32m"
yellow="$e[1;33m"
blue="$e[1;34m"
magenta="$e[1;35m"
darkcyan="$e[36m"

# misc settings
export COLORIZE=1
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
export EDITOR="/usr/bin/nano"
export GEMEDITOR="/usr/bin/nano"

# go
export GOPATH="/Users/mike/Dropbox/code/go"
export GOROOT="/usr/local/opt/go/libexec"
export GOBIN="$GOPATH/bin"

# rbenv
export RBENV_ROOT=/usr/local/opt/rbenv
source "/usr/local/Cellar/rbenv/1.0.0/libexec/../completions/rbenv.bash"
rbenv rehash 2>/dev/null
rbenv() {
  command="$1"
  if [ "$#" -gt 0 ]; then
    shift
  fi

  case "$command" in
  shell)
    eval `rbenv "sh-$command" "$@"`;;
  *)
    command rbenv "$command" "$@";;
  esac
}
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# git
export GIT_PS1_SHOWDIRTYSTATE=1
source ~/.git-prompt.sh

# hg
_hg_ps1() {
  hg prompt " {[hg]({branch})}{ at {bookmark}{status}" 2> /dev/null
}

# path
export PATH=$HOME/.composer/vendor/bin:$HOME/.rbenv/shims:$HOME/bin:$HOME/.scripts:.bundle/bin:/usr/local/heroku/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/lib/cake/console:/usr/local/git/bin:/Developer/usr/bin:$GOROOT:$PATH

# prompt
export PS1="\[${red}\][\w]\[${darkcyan}\]\$(_hg_ps1)\$(__git_ps1)\n\[${green}\]\u\[${yellow}\]@\[${green}\]\h\[${yellow}\](\$(date +%T))\[${end}\]$ "

