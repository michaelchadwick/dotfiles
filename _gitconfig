[include]
  # pull specific user I want to use on the machine
  path = .gitconfig.d/user.txt
[color]
  interactive = auto
  ui = auto
  branch = auto
[color "diff"]
  added = green bold
  changed = yellow bold
  modified = yellow bold
  untracked = red bold
[color "status"]
  added = green bold
  changed = yellow bold
  modified = yellow bold
  untracked = red bold
[core]
  excludesfile = ~/.gitignore
  editor = nano
  autocrlf = input
  safecrlf = false
  fileMode = false
[alias]
  # general
  aa = add --all
  st = status
  ci = commit
  co = checkout
  pushall = push --recurse-submodules=on-demand

  # branching
  br = branch
  bnew = checkout -b

  # diff
  diffs = diff --staged
  today = git diff --stat 'HEAD@{midnight}'

  # logging
  last = log -1
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lc = log -p -1
  quick-stats = ! /usr/local/bin/git-quick-stats
[push]
  default = matching
[diff]
  tool = kdiff3
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[status]
  submodulesummary = true
