# private aliases
if [ -f ~/.aliases_priv ]; then
  source ~/.aliases_priv
fi

# vars
APACHEFILES="~/Code/apachefiles"
DOTFILES="~/Code/dotfiles"
TXTAPP="nano"

# system commands
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias apachef="code && cd apachefiles"
alias backup="tmutil startbackup"
alias bd=". bd -s"
alias be="bundle exec"
alias clr="clear"
alias cls="clear"
alias code="cd ~/Code"
alias codemac="cd ~/Developer"
alias dandeploy="dandelion deploy"
alias db="cd ~/Dropbox"
alias dotf="cd $DOTFILES"
alias edit=$TXTAPP
alias gcal=gcalcli
alias gitlog="git lg -20"
alias home="cd ~"
alias myip="curl -s ip.appspot.com"
alias play="afplay"
alias rebash=". ~/.bashrc"
alias repostfix="sudo launchctl stop org.postfix.master; sudo launchctl start org.postfix.master"
alias reweb="sudo apachectl -k restart"
alias sites="cd ~/Code/web"
alias sqlite="sqlite3"
alias subl="sublime"
alias ytdl="youtube-dl -t"
alias ytdla="youtube-dl --extract-audio"

# simple http servers for local directory in various flavors
alias httphp="php -S 0.0.0.0:4567"
alias httpy="python -m SimpleHTTPServer 4568"
alias httruby="ruby -run -e httpd . -p 4569"

# editing config files
alias nanoaliases="$TXTAPP $DOTFILES/_aliases"
alias nanoaliasesp="$TXTAPP $DOTFILES/_aliases_priv"
alias nanobashprof="$TXTAPP $DOTFILES/_bash_profile"
alias nanobashrc="$TXTAPP $DOTFILES/_bashrc"
alias nanofuncs="$TXTAPP $DOTFILES/_functions"
alias nanofuncsp="$TXTAPP $DOTFILES/_functions_priv"
alias nanogemrc="$TXTAPP $DOTFILES/_gemrc"
alias nanogitconfig="$TXTAPP $DOTFILES/_gitconfig"
alias nanogitignore="$TXTAPP $DOTFILES/_gitignore"
alias nanohgrc="$TXTAPP $DOTFILES/_hgrc"
alias nanohosts="sudo $TXTAPP $APACHEFILES/_hosts"
alias nanohttpd="sudo $TXTAPP $APACHEFILES/_httpd.conf"
alias nanoinputrc="$TXTAPP $DOTFILES/_inputrc"
alias nanolitarc="$TXTAPP $DOTFILES/_litarc"
alias nanolocalrc="$TXTAPP $DOTFILES/_localrc"
alias nanovhosts="sudo $TXTAPP $APACHEFILES/_httpd-vhosts.conf"

# logs
alias taildev="tail -f log/development.log"
alias tailha="tail -f /var/log/apache2/access_log"
alias tailhe="tail -f /var/log/apache2/error_log"
