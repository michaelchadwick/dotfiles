# vars
APACHEFILES="~/Code/apachefiles"
DOTFILES="~/Code/dotfiles"

# copy file to dropbox
function copy_to_dropbox() { cp "$@" ~/Dropbox; }

# move file to dropbox
function move_to_dropbox() { mv "$@" ~/Dropbox; }

# dice rolls
function roll() {
  echo $(($RANDOM % $1 + 1));
}

# bootstrap
function strap() {
  cp -R ~/Code/web/bootstrap $1;
  cd $1;
}

# system commands
alias apachef="code && cd apachefiles"
alias backup="tmutil startbackup"
alias bd=". bd -s"
alias clr="clear"
alias cls="clear"
alias code="cd ~/Code"
alias codeosx="cd ~/Developer"
alias cpdb=copy_to_dropbox
alias dandeploy="dandelion deploy"
alias db="cd ~/Dropbox"
alias dotf="code && cd dotfiles"
alias gcal=gcalcli
alias gitlog="git lg"
alias home="cd ~"
alias mou="open -a /Applications/Mou.app/Contents/MacOS/Mou $@"
alias mvdb=move_to_dropbox
alias myip="curl -s ip.appspot.com"
alias play="afplay"
alias rebash=". ~/.bashrc"
alias repostfix="sudo launchctl stop org.postfix.master; sudo launchctl start org.postfix.master"
alias reweb="sudo apachectl -k restart"
alias sites="cd ~/Sites"
alias sqlite="sqlite3"
alias speedtest="speedtest-cli"
alias subl="sublime"
alias www="cd ~/Sites"
alias ytdl="youtube-dl -t"
alias ytdla="youtube-dl --extract-audio"

# simple http servers for local directory in various flavors
alias httphp="php -S 0.0.0.0:4567"
alias httpy="python -m SimpleHTTPServer 4568"
alias httruby="ruby -run -e httpd . -p 4569"

# editing config files
alias nanoaliases="nano $DOTFILES/_aliases"
alias nanobashprof="nano $DOTFILES/_bash_profile"
alias nanobashrc="nano $DOTFILES/_bashrc"
alias nanogemrc="nano $DOTFILES/_gemrc"
alias nanogitconfig="nano $DOTFILES/_gitconfig"
alias nanogitignore="nano $DOTFILES/_gitignore"
alias nanohgrc="nano $DOTFILES/_hgrc"
alias nanohosts="sudo nano $APACHEFILES/_hosts"
alias nanohttpd="sudo nano $APACHEFILES/_httpd.conf"
alias nanoinputrc="nano $DOTFILES/_inputrc"
alias nanolocalrc="nano $DOTFILES/_localrc"
alias nanovhosts="sudo nano $APACHEFILES/_httpd-vhosts.conf"

# logs
alias taildev="tail -f log/development.log"
alias tailha="tail -f /var/log/apache2/access_log"
alias tailhe="tail -f /var/log/apache2/error_log"
