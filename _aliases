### .aliases - spend less time typing

# load private, non-tracked, aliases
if [ -f ~/.aliases_priv ]; then
  source ~/.aliases_priv
fi

# shell commands
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias clr="clear"
alias cls="clear"
alias edit=$EDITOR
alias home="cd ~"
alias play="afplay"
alias rebash="source ~/.bashrc"
alias reweb="sudo apachectl -k restart"
alias rmd="rm -rf $1"
alias sizeof="du -sh $1"
alias untar="tar -xvf $1"

# mac-specific directory shortcuts
alias apps="cd /Applications"
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias docs="cd ~/Documents"
alias sites="cd ~/Sites"

# mac-specific commands
alias backup="tmutil startbackup"

# php
alias composer="php /usr/local/bin/composer.phar"
alias compup="composer selfupdate"
# symfony
alias sf="symfony"
alias sfstart="php bin/console server:start"
alias sfstop="php bin/console server:stop"
alias sfup="symfony self-update"

# git
alias gitlog="git lg -20"

# package management
alias brewup="brew update && brew upgrade && brew cleanup"
alias gemup="gem update && gem cleanup"
alias gemups="gem update --system"

# ruby
alias be="bundle exec"

# docker
alias dc="docker-compose"
alias dm="docker-machine"

# miscellaneous
alias dandeploy="dandelion deploy"
alias gcal=gcalcli
alias httports="sudo lsof -i -n -P | grep 'httpd\|vpnkit\|java' | grep LISTEN | egrep -o ':[0-9]{2,5}' | cut -f2- -d: | sort -n | uniq"
alias myip="curl -s ip.appspot.com"
alias repostfix="sudo launchctl stop org.postfix.master; sudo launchctl start org.postfix.master"
alias sqlite="sqlite3"
alias ytdl="youtube-dl -t"
alias ytdla="youtube-dl --extract-audio"

# simple http servers for local directory in various flavors
alias httphp="open http://localhost:4567; php -S 0.0.0.0:4567"
alias httpy="open http://localhost:4568; python -m SimpleHTTPServer 4568"
alias httruby="open http://localhost:4569; ruby -run -e httpd . -p 4569"
