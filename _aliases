# system commands
alias clr="clear"
alias cls="clear"
alias code="cd ~/Code"
alias codeosx="cd ~/Developer"
alias db="cd ~/Dropbox"
alias home="cd ~"
alias media="cd /Volumes/Media"
alias myip="curl -s ip.appspot.com"
alias mymusic="cd ~/Music/projects/Nebyoolae"
alias rebash=". ~/.bashrc"
alias reweb="sudo apachectl -k restart"
alias sites="cd ~/Sites"
alias sqlite="sqlite3"
alias working="cd ~/Music/projects/_working"
alias www="cd ~/Sites"
alias ytdl="youtube-dl -t"
alias ytdla="youtube-dl --extract-audio"

# simple http servers for local directory in various flavors
alias httphp="php -S localhost:4567"
alias httpy="python -m http.server 4567"
alias httrack="rackup -p 4567"
alias httruby="ruby -r webrick -e 's = WEBrick::HTTPServer.new(:Port => 4567, :DocumentRoot => "."); trap("INT") { s.shutdown }; s.start'"

# editing config files
alias nanoaliases="nano ~/Code/dotfiles/_aliases"
alias nanobashprof="nano ~/Code/dotfiles/_bash_profile"
alias nanobashrc="nano ~/Code/dotfiles/_bashrc"
alias nanogemrc="nano ~/Code/dotfiles/_gemrc"
alias nanogitconfig="nano ~/Code/dotfiles/_gitconfig"
alias nanogitignore="nano ~/Code/dotfiles/_gitignore"
alias nanohgrc="nano ~/Code/dotfiles/_hgrc"
alias nanohosts="sudo nano ~/Code/apachefiles/_hosts"
alias nanohttpd="sudo nano ~/Code/apachefiles/_httpd.conf"
alias nanoinputrc="nano ~/Code/dotfiles/_inputrc"
alias nanolocalrc="nano ~/Code/dotfiles/_localrc"
alias nanovhosts="sudo nano ~/Code/apachefiles/_httpd-vhosts.conf"

# logs
alias taildev="tail -f log/development.log"
alias tailha="tail -f /var/log/apache2/access_log"
alias tailhe="tail -f /var/log/apache2/error_log"

# nanostudio
alias nanssync="rsync -va --delete /Users/mike/Dropbox/Music/projects/nanostudio/ '/Users/mike/Documents/NanoStudio/User/'"
