# system commands
alias clr="clear"
alias cls="clear"
alias code="cd ~/Code"
alias db="cd ~/Dropbox"
alias home="cd ~"
alias md="mkdir $1 | cd $1"
alias myip="curl -s ip.appspot.com"
alias reload=". ~/.bashrc"
alias sites="cd ~/Sites"
alias webrestart="sudo apachectl -k restart"
alias www="cd ~/Sites"

# editing config files
alias nanoaliases="nano ~/Code/dotfiles/_aliases"
alias nanobashprof="nano ~/Code/dotfiles/_bash_profile"
alias nanobashrc="nano ~/Code/dotfiles/_bashrc"
alias nanohosts="sudo nano ~/Code/apachefiles/_hosts"
alias nanohttpd="sudo nano ~/Code/apachefiles/_httpd.conf"
alias nanolocalrc="nano ~/Code/dotfiles/_localrc"
alias nanovhosts="sudo nano ~/Code/apachefiles/_httpd-vhosts.conf"

# logs
alias taildev="tail -f log/development.log"
alias tailha="tail -f /var/log/apache2/access_log"
alias tailhe="tail -f /var/log/apache2/error_log"

# nanostudio
alias nanssync="rsync -va --delete /Users/mike/Dropbox/Music/projects/nanostudio/ '/Users/mike/Library/Containers/co.uk.blipinteractive.NanoStudio.osx/Data/Documents/User/'"
